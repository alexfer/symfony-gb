{% extends 'base.html.twig' %}

{% block title %}{{ gb.Title }}{% endblock %}

{% block body %}
    <div class="container">                
        <div class="card border-secondary mt-5">
            <div class="card-header">
                <h5>{{ gb.Title }}</h5>
            </div>
            <div class="card-body">                
                <small class="text-muted">{{ gb.createdAt ? gb.createdAt|date('M d, Y H:i') : '' }}</small>     
                <hr>                                
                <p>
                    {% autoescape %}
                        {{ gb.Message|raw }}
                    {% endautoescape %}
                </p>                                               
            </div>
            <div class="card-footer">
                Comments: {{ comments.count }}
            </div>                   
        </div>         
    </div>
    <div class="row d-flex justify-content-center mt-1 mb-100">
        <div class="container">
            <div class="card mt-3">                    
                {% if comments.count %}
                    <div class="comment-widgets">
                        {% for comment in comments %}
                            <div class="d-flex flex-row comment-row p-3">
                                <div class="p-2"><img src="{{ asset('public/images/avatar.png') }}" alt="user" width="50" class="rounded-circle"></div>
                                <div class="comment-text w-100">
                                    <h6 class="font-medium">{{ comment.author }}</h6> 
                                    <span class="m-b-15 d-block">{{ comment.content|striptags }}</span>
                                    <div class="comment-footer"> 
                                        {% if app.user and app.user.id == gb.user.id or is_granted('ROLE_ADMIN') %}                                            
                                            <a href="{{ path('app_comment_publish', {id: comment.id}) }}" role="button" class="btn btn-outline-secondary btn-sm">{{ 'action.publish_comment'|trans }}</a> 
                                        {% endif %}
                                        <small class="text-muted float-right">{{ comment.createdAt ? comment.createdAt|date('M d, Y H:i') : '' }}</small>
                                    </div>
                                </div>
                            </div> 
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="comment-widgets text-center pt-3 text-secondary">{{ 'entry.no_comments'|trans }}</div>
                {% endif %}
            </div>
        </div>
    </div>      
{% endblock %}