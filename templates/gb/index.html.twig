{% extends 'base.html.twig' %}

{% block title %}GB Entrirs{% endblock %}

{% block body %}
    <h1>GB Entries</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gb in g_bs %}
            <tr>
                <td>{{ gb.id }}</td>
                <td>{{ gb.title }}</td>        
                <td>{{ gb.createdAt ? gb.createdAt|date('Y-m-d H:i:s') : '' }}</td> 
                <td>{{ gb.updatedAt ? gb.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_g_b_show', {'id': gb.id}) }}">show</a>
                    <a href="{{ path('app_g_b_edit', {'id': gb.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_g_b_new') }}">Create new</a>
{% endblock %}
