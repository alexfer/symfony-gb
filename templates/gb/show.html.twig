{% extends 'base.html.twig' %}

{% block title %}{{ 'action.show_entry'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="card border-secondary mt-5">
            <div class="card-header">
                <h5>{{ 'action.show_entry'|trans }}</h5>
            </div>
            <div class="card-body">
                <b class="text-muted">Title:</b>
                <p>{{ gb.Title }}</p>
                <b class="text-muted">Message:</b>
                <p>
                    {% autoescape %}
                        {{ gb.Message|raw }}
                    {% endautoescape %}
                </p>
                <b class="text-muted">Date Created: </b>{{ gb.createdAt ? gb.createdAt|date('M d, Y H:i') : '' }}
                <p></p>
                <b class="text-muted">Date Updated: </b>{{ gb.updatedAt ? gb.updatedAt|date('M d, Y H:i') : '' }}
                <hr>
                <b class="text-muted">UUid:</b>
                <a class="link-secondary" href="{{ path('app_entry_show', {'uuid': gb.uuid}) }}">Reference to page</a>
                <hr>
                {% include 'gb/_attachments.html.twig' %}
            </div>
            <div class="card-footer">
                <a class="btn btn-secondary float-right" href="{{ path('app_gb_index') }}">{{ 'action.all_entry'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}