{% extends 'base.html.twig' %}

{% block title %}Entries{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Show Entry</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-secondary float-end" href="{{ path('app_g_b_index') }}"> 
                    View All
                </a>
            </div>
            <div class="card-body">
                <b class="text-muted">Title:</b>
                <p>{{ gb.Title }}</p>
                <b class="text-muted">Message:</b>
                <p>{{ gb.Message }}</p>
                <b class="text-muted">UUid:</b>
                <p>{{ gb.uuid }}</p>                
                <b class="text-muted">Date Created: </b>{{ gb.createdAt ? gb.createdAt|date('Y-m-d H:i') : '' }}
                <p></p>
                <b class="text-muted">Date Updated: </b>{{ gb.updatedAt ? gb.updatedAt|date('Y-m-d H:i') : '' }}                
            </div>
        </div>
    </div>
{% endblock %}