<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {{ include('layouts/navbar.html.twig') }}
        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {#{{ encore_entry_script_tags('frontend') }}#}
        {% endblock %}
        <footer class="footer">
            <div class="container">
                {% set year =  'now' | date('Y') %}
                {% set build_year =  '2023' %}
                <span class="text-muted">Gb Application. @ {{ year == build_year ? build_year : build_year ~ '-' ~ year }} <a class="text-decoration-none text-dark font-weight-bold" href="https://symfony.com/">Symfony</a></span>
            </div>
        </footer>
    </body>
</html>