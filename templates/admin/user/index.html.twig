{% extends 'base.html.twig' %}

{% block title %}{{ 'menu.users'|trans }}{% endblock %}

{% block body %}    
    <div class="container">
        <div class="card border-secondary mt-5">        
            <div class="card-header">
                <h5>{{ 'menu.users'|trans }}</h5>        
            </div>
            <div class="card-body">
                {% if app.user %}
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>User Name</th>
                                <th>Roles</th>
                                <th>Email</th>
                                <th>Created At</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.name }}</td>
                                    <td>{{ user.roles|join(', ') }}</td>
                                    <td>{{ user.email }}</td>        
                                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i') : '' }}</td>                                     
                                    <td class="text-center">
                                        <a class="link-secondary text-decoration-none" href="{{ path('app_admin_user_edit', {'id': user.id}) }}"><i class="icon-edit"></i></a> 
                                        <a class="link-secondary text-decoration-none" href="{{ path('app_admin_user_show', {'id': user.id}) }}"><i class="icon-eye-open"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center">{{ 'entry.no_entries_found'|trans }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
            <div class="card-footer">
                <a class="btn btn-warning float-end" href="{{ path('app_admin_user_new') }}"> 
                    Create
                </a>
            </div>
        </div>
    </div>
{% endblock %}
