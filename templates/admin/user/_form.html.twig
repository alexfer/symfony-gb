{{ form_start(form) }}
{% include 'flashMessage/flashMessage.html.twig' %}
<div class="form-group">
    {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.roles, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_widget(form.is_verified) }}
    {{ form_label(form.is_verified) }}
</div>
<button class="btn {{ button_color|default('btn-primary') }} mt-2">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
