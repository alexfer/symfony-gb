{{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
{% include 'flashMessage/flashMessage.html.twig' %}
<div class="form-group">
    {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.roles, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-check">
  {{ form_row(form.is_verified, {'attr': {'class': 'form-check-input'}}) }}
  
</div>
<button class="btn {{ button_color|default('btn-primary') }} mt-3">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
