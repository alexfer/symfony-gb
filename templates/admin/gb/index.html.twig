{% extends 'base.html.twig' %}

{% block title %}{{ 'action.entries'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="card border-secondary mt-4">
            <div class="card-header">
                <h5>{{ 'action.entries'|trans }}</h5>
            </div>
            <div class="card-body px-2 py-1">
                {% if app.user %}
                    <table class="table table-hover border-light">
                        <thead>
                            <tr class="table-light">
                                <th>Id</th>
                                <th>User Name</th>
                                <th>Title</th>
                                <th>Created At</th>
                                <th>Updated At</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entry in paginator.items %}
                                <tr class="{% if not entry.approved %} text-danger  bg-light{% endif %}">
                                    <td>{{ entry.id }}</td>
                                    <td>
                                        <a class="link-secondary" href="{{ path('app_admin_user_show', {'id': entry.user.id}) }}">{{ entry.user.name }}</a>
                                    </td>
                                    <td>{{ entry.title }}</td>
                                    <td>{{ entry.createdAt ? entry.createdAt|date('Y-m-d H:i') : '' }}</td>
                                    <td>{{ entry.updatedAt ? entry.updatedAt|date('Y-m-d H:i') : '' }}</td>
                                    <td class="text-center">
                                        <a class="link-secondary text-decoration-none" href="{{ path('app_admin_entry_edit', {'uuid': entry.uuid}) }}"><i class="fa fa-pencil-square-o"></i></a>
                                        <a class="link-secondary text-decoration-none" href="{{ path('app_admin_entry_show', {'uuid': entry.uuid}) }}"><i class="fa fa-eye"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-secondary">{{ 'entry.no_entries_found'|trans }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {% include 'utils/paginator.html.twig' %}
                {% endif %}
            </div>
            <div class="card-footer">
                <a class="btn btn-secondary float-right" href="{{ path('app_gb_new') }}">{{ 'action.create_entry'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}
